[package]
name = "{{project_name_snake}}"
version = "0.1.0"
edition = "2021"
authors = ["{{author}} <{{email}}>"]
description = "{{project_description}}"

[workspace]
members = [
    "api",
    "entity-base",
    "entity-derive",
    "rbac",
    "database",
    "entities",
    "task",
    "services",
    "storage",
    "libs",
    "config",
    "container"
]

[workspace.dependencies]
tokio = { version = "1", features = ["full"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
async-trait = "0.1" 